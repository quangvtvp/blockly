{
    "name": "OttoBlockly",
    "version": "1.0.0",
    "description": "Blockly and Arduino for Otto DIY robot",
    "author": "Otto DIY and community",
    "license": "CC0-1.0",
    "main": "electronApp.js",
    "keywords": [
        "blockly",
        "BLOCKLY",
        "arduino",
        "ARDUINO",
        "esp32",
        "ESP32",
        "esp8266",
        "ESP8266",
        "electron",
        "ELECTRON",
        "OttoDIY",
        "serialport",
        "SERIALPORT",
        "electron-builder",
        "electron-updater",
        "PYTHON",
        "python",
        "PYFLAKES",
        "pyflakes",
        "ampy",
        "AMPY",
        "microbit",
        "MICROBIT"
    ],
    "scripts": {
        "install": "electron-rebuild",
        "postinstall": "electron-builder install-app-deps",
        "start": "electron .",
        "dist": " electron-builder"
    },
    "build": {
        "buildDependenciesFromSource": true,
        "npmRebuild": false,
        "appId": "com.electron.blocklino",
        "asar": false,
        "directories": {
            "buildResources": "./build",
            "output": "./dist"
        },
        "nsis": {
            "installerIcon": "build/install.ico",
            "uninstallerIcon": "build/app.ico",
            "oneClick": false,
            "perMachine": true,
            "deleteAppDataOnUninstall": true,
            "allowToChangeInstallationDirectory": true,
            "runAfterFinish": true,
            "include": "build/blocklino.nsh"
        },
        "win": {
            "target": [
                "portable",
                "nsis",
                "zip"
            ],
            "icon": "build/app.ico"
        },
        "fileAssociations": {
            "ext": "bloc",
            "name": "BLOC File",
            "role": "Editor",
            "icon": "build/file.ico"
        },
        "extraFiles": [
            "www",
            "compilation",
            "pilotes",
            "README.md",
            "LICENSE.md",
            "config.json"
        ],
        "extraResources": [
            "dev-app-update.yml",
            "app-update.yml"
        ],
        "publish": [
            {
                "provider": "github",
                "repo": "blockly",
                "owner": "OttoDIY",
                "releaseType": "release"
            }
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/OttoDIY/blockly"
    },
    "bugs": {
        "url": "https://github.com/OttoDIY/blockly/issues"
    },
    "devDependencies": {
        "electron": "13.1.6",
        "electron-builder": "20.39.0",
        "electron-rebuild": "2.3.5"
    },
    "dependencies": {
        "ajv": "6.10.0",
        "child_process": "1.0.2",
        "electron-updater": "4.0.6",
        "serialport": "9.2.0"
    }
}